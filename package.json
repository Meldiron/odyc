{
	"name": "odyc-monorepo",
	"workspaces": [
		"packages/*",
		"apps/*",
		"tests/*"
	],
	"scripts": {
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "npm run lint --workspaces",
		"test": "npm run test --workspace=odyc-e2e",
		"test:once": "npm run test:once --workspace=odyc-e2e",
		"build": "npm run build --workspace=odyc"
	},
	"devDependencies": {
		"prettier": "^3.0.0"
	}
}
